<div class="col-md-12">
  <div class="group">
    <%= link_to("New topic", new_topic_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Title</td>
        <td>Count</td>
        <td>Like</td>
        <td>Dislike</td>
        <td>Bye</td>
      </tr>
    </thead>
    <tbody>
      <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td><%= topic.votes.size %></td>
        <td><%= button_to '+1', upvote_topic_path(topic), method: :post%></td>
        <td><%= button_to '-1', downvote_topic_path(topic), method: :post%></td>
        <% if topic.editable_by?(current_user) %>
          <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'About', about_index_path %>
</div>

